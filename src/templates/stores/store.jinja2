{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1> Store {{ store.name }}</h1>
    </div>
    <p> All url in this store start with {{ store.url_prefix }}</p>

    {% if session['email'] in config.ADMINS %}
    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-warning" href="{{ url_for("stores.edit_store", store_id = store._id) }}" , role="button">Edit Store</a>
            <a class="btn btn-danger" href="{{ url_for("stores.delete_store", store_id = store._id) }}" , role="button">Delete Store</a>
        </div>
    </div>
    {% endif %}
{% endblock %}